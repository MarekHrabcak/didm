  <script>
    window.onkeycloakloaded = []
    window.onload = () => {
      const initKeycloak = async () => {
        const keycloak = new Keycloak({
          realm: 'master',
          clientId: 'agent',
          public: true,
          serverUrl: 'http://keycloak:8090',
          verifyTokenAudience: false
        });

        await keycloak.init({ onLoad: 'login-required' })
        
        window.keycloak = keycloak

        if (window.onkeycloakloaded) {
          for (let i = 0; i < window.onkeycloakloaded.length; i++) {
            window.onkeycloakloaded[i]()
          }
        }
      }

      initKeycloak()
    }
  </script>
